{
  "name": "server",
  "version": "1.0.0",
  "description": "Server application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --testTimeout=30000 --runInBand --passWithNoTests",
    "test:watch": "jest --watch",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0 --fix-dry-run || echo 'Lint warnings found'",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build script configured'",
    "build:ci": "npm run build --if-present",
    "build:prod": "NODE_ENV=production npm run build",
    "ci:install": "npm ci --no-audit --prefer-offline",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf node_modules dist coverage",
    "clean:win": "rmdir /s /q node_modules dist coverage",
    "preinstall": "node -v && npm -v",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "server",
    "api",
    "express"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-fileupload": "^1.5.1",
    "express-winston": "^4.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongoose": "^8.9.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-mongodb": "^6.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  }
}